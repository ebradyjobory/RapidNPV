<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>RapidNPV</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="javascripts/angular/angular.js"></script>
    <script src="controllers/npvCtrl.js"></script>
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  </head>
  <body>
    <div class='container' ng-app='RapidNPV'>
      <h1 class="logo">RapidNPV</h1>
      <p>Please fill out the information below</p>

      <div ng-controller="NpvCtrl">
      <form name="npvForm" ng-submit="submitForm(npvForm.$valid)" novalidate>
        <table class="table">
          <thead>
            <tr>
              <th>Discount Rate %</th>
              <th>Cash Flow Year 0</th>
              <th>Cash Flow Year 1</th>
              <th>Cash Flow Year 2</th>
              <th>Cash Flow Year 3</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><input placeholder="e.g, 10 for 10%" class="form-control" ng-model="npv.rate" required></td>
              <td><input placeholder="always negative" class="form-control" ng-model="npv.cf0" required></td>
              <td><input class="form-control" ng-model="npv.cf1" required></td>
              <td><input class="form-control" ng-model="npv.cf2" required></td>
              <td><input class="form-control" ng-model="npv.cf3" required></td>
            </tr> 
          </tbody>
        </table>  
        <button type="submit" class="btn btn-primary submit" ng-click="calculateNPV()" ng-disabled="npvForm.$invalid">Is it worth it?</button>
      </form>
      </div> <!-- NpvCtrl -->
      <div id="results"></div>
      <div id="status"></div>
    </div>
  </body>
</html>
